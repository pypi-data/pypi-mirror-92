{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },

    "handlers": {

        "error_file_handler": {
            "class": "logging.CompressedRotatingFileHandler",
            "level": "ERROR",
            "formatter": "simple",
            "filename": "dsdk_error.log",
            "maxBytes": 52428800,
            "backupCount": 5,
            "encoding": "utf8"
        }
    },

    "root": {
        "level": "ERROR",
        "handlers": ["error_file_handler"]
    }
}
