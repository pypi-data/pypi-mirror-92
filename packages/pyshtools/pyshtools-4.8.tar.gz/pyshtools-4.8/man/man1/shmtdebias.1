\f[C]lmax\f[R], \f[C]tapers\f[R], \f[C]lwin\f[R], \f[C]k\f[R],
\f[C]nl\f[R], \f[C]lmid\f[R], \f[C]n\f[R], \f[C]taper_wt\f[R],
\f[C]exitstatus\f[R])
