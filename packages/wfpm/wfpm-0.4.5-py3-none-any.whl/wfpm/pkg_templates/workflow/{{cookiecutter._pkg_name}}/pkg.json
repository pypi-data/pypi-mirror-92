{
    "name": "{{ cookiecutter._pkg_name }}",
    "version": "{{ cookiecutter.pkg_version }}",
    "description": "{{ cookiecutter.pkg_description }}",
    "main": "{{ cookiecutter.main }}",
    "scripts": {
        "test": "wfpm test"
    },
    "deprecated": false,
    "keywords": [
        "bioinformatics"
    ],
    "repository": {
        "type": "{{ cookiecutter._repo_type }}",
        "url": "https://{{ cookiecutter._repo_server }}/{{ cookiecutter._repo_account }}/{{ cookiecutter._repo_name }}.git"
    },
    "dependencies": ["{{ cookiecutter.dependencies }}"],
    "devDependencies": ["{{ cookiecutter.devDependencies }}"],
    "contributors": [
        {
            "name": "{{ cookiecutter.full_name }}",
            "email": "{{ cookiecutter.email }}"
        }
    ],
    "license": "{{ cookiecutter._license }}",
    "bugReport": "https://{{ cookiecutter._repo_server }}/{{ cookiecutter._repo_account }}/{{ cookiecutter._repo_name }}/issues",
    "homepage": "https://{{ cookiecutter._repo_server }}/{{ cookiecutter._repo_account }}/{{ cookiecutter._repo_name }}#readme"
}
