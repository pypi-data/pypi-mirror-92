{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Provider",
    "description": "An organization providing time series data",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "code": {
            "$ref": "definitions.json#/providerCodeString"
        },
        "description": {
            "$ref": "definitions.json#/nonEmptyString"
        },
        "name": {
            "$ref": "definitions.json#/nonEmptyString"
        },
        "region": {
            "$ref": "definitions.json#/nonEmptyString"
        },
        "terms_of_use": {
            "type": "string",
            "format": "uri"
        },
        "attribution": {
            "$ref": "definitions.json#/nonEmptyString",
            "description": "Attribution text that should appear on each page presenting data"
        },
        "website": {
            "type": "string",
            "format": "uri"
        }
    },
    "required": [
        "code",
        "website"
    ]
}